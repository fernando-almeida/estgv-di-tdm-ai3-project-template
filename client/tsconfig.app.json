{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "paths": {
      "@angular/*": [
        "node_modules/@angular/*"
      ]
    },
    "outDir": "./out-tsc/app"
  },
  "files": [
    "src/main.ts",
    "src/polyfills.ts"
  ],
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "src/test.ts",
    "src/**/*.spec.ts"
  ]
}